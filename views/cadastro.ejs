<%- include('./partials/header') %>
<%- include('./partials/menu') %>
  <main>
    <h3 class="form_cad">Preencha o formulário para finalizar seu cadastro!</h3>
    <form action="" method="POST">
      <div class="painel_cadastro">
        <div class="painel_dados">
          <label for="nome">Nome</label><br>
          <input type="text" name="nome" id="nome" required /><br>
          <label for="email">E-mail</label><br>
          <input type="text" name="email" id="email" required /><br>
          <label for="telefone">Telefone</label><br>
          <input type="text" name="telefone" id="telefone" required /><br>
          <label for="cpf">CPF</label><br>
          <input type="text" name="cpf" id="cpf" required /><br>
        </div>
        <div class="painel_endereco">
          <label>CEP</label><br>
          <input type="text" name="cep" id="cep" required /><br>
          <label for="endereco">Endereço</label><br>
          <input type="text" name="endereco" id="endereco" required /><br>
          <label for="numero">Número</label><br>
          <input type="number" name="numero" id="numero" required /><br>
          <label for="complemento">Complemento</label><br>
          <input type="text" name="complemento" id="complemento" /><br>
          <label for="bairro">Bairro</label><br>
          <input type="text" name="bairro" id="bairro" required /><br>
          <label for="cidade">Cidade</label><br>
          <input type="text" name="cidade" id="cidade" required /><br>
          <label for="ponto_referencia">Ponto de Referência</label><br>
          <textarea name="ponto_referencia" id="ponto_referencia" maxlength="300" /></textarea><br>
        </div>
      </div>

      <div class="input-submit-container">
        <button type="reset">Limpar</button>
        <button type="submit">Salvar</button>
      </div>
